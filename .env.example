# Server Configuration
PORT=3000

# Database Configuration
MONGODB_URI=mongodb://localhost:27017/lifestack

# API Authentication
API_KEY=your_api_key_here

# Google Calendar Service Configuration
GOOGLE_CREDENTIALS_PATH=./credentials.json
GOOGLE_TOKEN_PATH=./token.json
CALENDAR_CACHE_DURATION=900

# Strava Service Configuration
# Get your access token from: https://www.strava.com/settings/api
# Note: Strava access tokens expire after 6 hours. For production use,
# implement OAuth2 refresh flow with STRAVA_REFRESH_TOKEN
STRAVA_ACCESS_TOKEN=your_strava_access_token_here

# Pavlok Service Configuration
# Get your token from: https://pavlok.com/
# Note: This token is used to trigger stimuli on your Pavlok device
PAVLOK_TOKEN=your_pavlok_token_here

# Notion Service Configuration
# Create an integration at: https://www.notion.so/my-integrations
# Note: Grant the integration access to specific pages/databases you want to query
NOTION_TOKEN=your_notion_integration_token_here

# Todoist Service Configuration
# Get your API token from: https://todoist.com/prefs/integrations
# Note: This token provides access to your Todoist tasks and projects
TODOIST_TOKEN=your_todoist_api_token_here
